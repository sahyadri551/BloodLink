rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- UPDATED RULES FOR 'users' ---
    match /users/{userId} {
      // Any logged-in user can READ any user's profile (for the search page)
      allow read: if request.auth != null;

      // A user can ONLY WRITE (update/create) their OWN profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    // --- END OF UPDATED RULES ---

    // Rules for bloodRequests (already correct)
    match /bloodRequests/{requestId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.uid;
    }

  }
}